<div class="col-md-12">
  <% if current_user %>
  <%= link_to("新增电影", new_movie_path, class: "btn btn-primary pull-right") %>
  <% end %>
  <table class="table">
    <thead>
      <tr>
        <td>电影名字</td>
        <td>电影简述</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to(movie.title, movie_path(movie)) %></td>
          <td><%= movie.description %></td>
          <td><%= movie.created_at %></td>
          <td>
            <% if current_user %>
            <%= link_to("Edit", edit_movie_path(movie), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", movie_path(movie), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
