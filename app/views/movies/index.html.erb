<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <td>电影名字</td>
        <td>电影简述</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to(movie.title, movie_path(movie)) %></td>
          <td><%= movie.description %></td>
          <td><%= movie.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
